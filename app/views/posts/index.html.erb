<h1 class="mt-4">Blog Posts</h1>
<% if @posts.length() == 0 %>
    <h4 class="mt-4">There are no posts currently available.</h4>
    <button class="btn btn-success"><%= link_to "Create Post", new_post_path %></button>
<% else %> 
<% @posts.each do |post| %>
<div class="card w-100 mt-4">
  <div class="card-body">
    <h5 class="card-title"><%= post.title %></h5>
    <hr>
    <p class="card-text"><%= post.body %></p>
    <%= link_to "Read More", post_path(post), :class => 'btn btn-primary' %>
  </div>
</div>
<% end %>
<% end %>